{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "dev": {
      "env": ["SERVER_*", "PUBLIC_WEB_URL"],
      "inputs": ["$TURBO_DEFAULT$"],
      "persistent": true
    },
    "build": {
      "env": ["SERVER_*", "PUBLIC_WEB_URL"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "start": {
      "env": ["SERVER_*", "PUBLIC_WEB_URL"],
      "persistent": true
    }
  }
}
